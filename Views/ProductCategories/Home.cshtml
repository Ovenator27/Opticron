@using Opticron.Controllers
@model Opticron.Models.ProductCategories

@{
string imgSrc = string.Empty;
    if(Model.Image != null) 
    {
    var base64 = Convert.ToBase64String(Model.Image);
    imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }
}

<div class="col-12 col-lg-3 col-md-6 container">
    <img src="@imgSrc" class="home-image"/>
    <h4 class="product-categories-text">@Html.DisplayFor(model => model.Description)</h4>
</div> 