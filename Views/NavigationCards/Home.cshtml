@using Opticron.Controllers
@model Opticron.Models.NavigationCards

@{
    string imgSrc = string.Empty;
    if(Model.Image != null) 
    {
    var base64 = Convert.ToBase64String(Model.Image);
    imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }
}

<div class="col-12 col-lg-3 col-md-6 container">
    <h2>@Html.DisplayFor(model => model.Title)</h2>
    <img src="@imgSrc" class="home-image"/>
    <p>@Html.DisplayFor(model => model.Description)</p>
    <button>@Html.DisplayFor(model => model.LinkText)</button>
</div> 
