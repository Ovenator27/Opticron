@using Opticron.Controllers
@model Opticron.Models.NavigationCards

@{
    string imgSrc = string.Empty;
    if(Model.Image != null) 
    {
    var base64 = Convert.ToBase64String(Model.Image);
    imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }
}

<div class="card-title col-12 col-lg-3 col-md-6 container">
    <h3 style="padding-bottom: 0.5rem;">@Html.DisplayFor(model => model.Title)</h2>
    <img src="@imgSrc" class="home-image" style="padding-bottom: 1rem;"/>
    <p>@Html.DisplayFor(model => model.Description)</p>
    <button class="home-button">@Html.DisplayFor(model => model.LinkText)</button>
</div> 
